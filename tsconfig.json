{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src/**/*",
    "types/express.types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}